<!doctype html>
<html lang="en">
  <head>
   
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

   
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/profile.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <title><%=user.Name%> Profile</title>
  </head>

  <body>
    
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark sticky-top" >
      <div class="container-fluid">
        
          <a class="navbar-brand " id="photoText" href="/profile">
            <img src="<%=user.ProfilePhoto%>" id="photo" alt="" width="50" height="50" class="d-inline-block align-text-top">
            
          </a>
          <a class="navbar-brand active" href="/profile">
            <%=user.Name%>
            
          </a>
          
        
        <!-- <h3 class="navbar-brand" > <%=user.Name%></h3>
        <img class="navbar-brand img-fluid" src="<%=user.ProfilePhoto%>" alt=""> -->
        <!-- <img class="navbar-brand" > <%=user.Name%></h> -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link " aria-current="page" href="/">Home</a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link" href="/friends">Friends</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/search">Search</a>
            </li>
          
            <li class="nav-item">
              <a class="nav-link" href="/changePass">Change Password</a>
            </li>

  
           
          </ul>
         
            <a href="/logout">
            <button class="btn btn-outline-danger">Log Out</button>
          </a>
        </div>
      </div>
    </nav>


      <div class="container">
       

        <div class="card m-auto" style="min-width: 70%;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="<%=user.ProfilePhoto%>" class="img-fluid rounded-start mainPhoto" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h2 class="card-title"><%=user.Name%></h2>
                  <p class="card-text">Mobile Number - <%=user.Mobile%></p>
                  <p class="card-text">Email id - <%=user.Email%></p>
                  <p class="card-text"><small class="text-muted">Friends - <a href="/friends"><%=count%> Friends</a> </small></p>
                </div>
              </div>
            </div>
          </div>

          <% if(Post.length) {%>

          <div class="yourPost">
              <h4>Your Posts</h3>
          </div>
       


          <div class="cardCont">
       
            
            <% Post.forEach(function(p){ %>
           
            <div class="card" style="width: 20rem;">
              <div class="card-body post">
                <h5 class="card-title th5"><%=p.Name%></h5>
                <div class="p-dt">
                    <i class="material-icons">calendar_today</i>
                    <span><%=p.Time.toDateString()%> (<%=p.Privacy%>)</span>
                  </div>
                <p class="card-text"><%=p.Para%></p>
              </div>

              <div class="imageCnt">
                <img src="<%=p.Photo%>" class="card-img-bottom imagescard"  alt="No Image">
              </div>

                 
            </div>
            <% }); %>
          </div>

          <%}%> 
        </div>
      

        <footer>
          <div>
            &#169 Trivendra 2023 All Right Reserved
          </div>
        </footer>
        
      <script>
        let up = document.getElementById("upPhoto")

        function upClick() {
            up.click()
        }
      </script>
      
    
