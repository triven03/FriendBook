              <li class="nav-item">
                <a class="nav-link " href="/search">Search</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/friendProfile">Friend Profile</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/changePass">Change Password</a>
              </li>

    
             
            </ul>
           
              <a href="/logout">
              <button class="btn btn-outline-danger">Log Out</button>
            </a>
          </div>
        </div>
      </nav>


      <div class="container">
       

            <div class="card m-auto" style="min-width: 70%;">
                <div class="row g-0">
                <div class="col-md-4">
                    <img src="<%=Friend.ProfilePhoto%>" class="img-fluid rounded-start mainPhoto" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                    <h2 class="card-title"><%=Friend.Name%></h2>
                    <p class="card-text">Mobile Number - <%=Friend.Mobile%></p>
                    <p class="card-text">Email id - <%=Friend.Email%></p>
                    <p class="card-text"><small class="text-muted">Friends - <a href="" data-bs-toggle="modal" data-bs-target="#friendlist"><%=Friend.Friends.length%></a> </small></p>
                    <p class="card-text"><small class="text-muted">Mutual Friends - <a href="" data-bs-toggle="modal" data-bs-target="#mutualfriend"><%=Mutual.length%></a> </small></p>
                    </div>
                </div>
                </div>
            </div>
        
       
            <div class="modal fade" id="friendlist" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Friend List</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                      <table>
                          <thead>
                              <tr>
                                  <th class="head" colspan="3"><%=Friend.Friends.length%> Friends</th>
                                  
                              </tr>
                          </thead>
                          <tbody>
                              
                        <% Friend.Friends.forEach(function(f){ %>
                              <tr>
                                <td><img src="<%=f.ProfilePhoto%>" /></td>
                                  <td><%=f.Name%></td>
                                  <td><%=f.Email%></td>
                              </tr>
                        <% }); %>
  
                          </tbody>
                      </table>
                    </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    
                  </div>
                </div>
              </div>
            </div>
          <div class="modal fade" id="mutualfriend" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Mutual Friend</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                      <table>
                          <thead>
                              <tr>
                                  <th class="head" colspan="3"><%=Mutual.length%> Friends</th>
                                  
                              </tr>
                          </thead>
                          <tbody>
                              
                            <% Mutual.forEach(function(f){ %>
                              <tr>
                                <td><img src="<%=f.ProfilePhoto%>" /></td>
                                  <td><%=f.Name%></td>
                                  <td><%=f.Email%></td>
                              </tr>
                          <% }); %>
                             
                              
                              
                          </tbody>
                      </table>
                    </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    
                  </div>
                </div>
              </div>
            </div>

         </div>

