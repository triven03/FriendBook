          <input type="submit"  id="subBtnSf">
        </form>

        <div class="header_fixed">
          <table>
              <thead>
                  <tr>
                    <% if(!user.Friends.length) {%>
                      <th class="head" colspan="4">You Have No Friends</th>
                    <%}%>

                    <% if(user.Friends.length) {%>
                      <th class="head" colspan="4">Friend List - <%=user.Friends.length%> Friends</th>
                    <%}%>

                      
                  </tr>
              </thead>
              <tbody>
                <% if(user.Friends.length) {%>
                  <% user.Friends.forEach(function(p){ %>
                  
                  <tr>
                     
                      <td><img src="<%=p.ProfilePhoto%>" /></td>
                      <td><%=p.Name%></td>
                      <td><%=p.Email%></td>
                      <td><button onclick="ShowFriendProf(this)" id="<%=p.Mobile%>">View</button></td>
                      
